{
  "name": "flagfit-pro-monorepo",
  "version": "1.0.0",
  "description": "FlagFit Pro - Complete Flag Football Training Platform",
  "private": true,
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd flagfitpro-backend && npm run lint",
    "lint:frontend": "cd react-flagfootball-app && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "cd flagfitpro-backend && npm run lint:fix",
    "lint:fix:frontend": "cd react-flagfootball-app && npm run lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd flagfitpro-backend && npm run test",
    "test:frontend": "cd react-flagfootball-app && npm run test",
    "audit": "npm run audit:backend && npm run audit:frontend",
    "audit:backend": "cd flagfitpro-backend && npm audit",
    "audit:frontend": "cd react-flagfootball-app && npm audit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
