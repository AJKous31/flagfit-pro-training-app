{
  "name": "flagfit-pro-training-app",
  "version": "1.0.0",
  "description": "FlagFit Pro - Flag Football Training Platform with React + PocketBase",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "cd react-flagfootball-app && npm run dev",
    "build": "cd react-flagfootball-app && npm run build",
    "preview": "cd react-flagfootball-app && npm run preview",
    "lint": "cd react-flagfootball-app && npm run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "cd react-flagfootball-app && npm run test",
    "pocketbase": "./pocketbase serve --dev --dir=./pb_data",
    "stress-test": "artillery run stress-test.yml",
    "stress-test:pocketbase": "artillery run pocketbase-stress-test.yml",
    "stress-test:frontend": "artillery run frontend-stress-test.yml",
    "audit": "npm audit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "artillery": "^2.0.23",
    "husky": "^9.1.7",
    "prettier": "^3.4.2"
  },
  "dependencies": {
    "pocketbase": "^0.26.1"
  }
}