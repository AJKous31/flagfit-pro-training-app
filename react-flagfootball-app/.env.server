# ===========================================
# SERVER-SIDE ENVIRONMENT VARIABLES
# These are NEVER exposed to the browser
# ===========================================

# Database Configuration
DATABASE_URL=sqlite:./pb_data/data.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Authentication Secrets
JWT_SECRET=generate-a-secure-random-32-character-key
CSRF_SECRET=generate-another-secure-32-character-key
ENCRYPTION_KEY=generate-a-third-secure-32-character-key

# API Keys (server-side only)
YOUTUBE_API_KEY=your-actual-youtube-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
SENDGRID_API_KEY=your-sendgrid-api-key-here

# External Services
REDIS_URL=redis://localhost:6379
WEBHOOK_SECRET=your-webhook-secret-key

# Production Configuration
NODE_ENV=development
LOG_LEVEL=debug
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Security Headers
CORS_ORIGIN=http://localhost:3000
TRUSTED_PROXIES=127.0.0.1

# Monitoring
HEALTH_CHECK_SECRET=your-health-check-secret
METRICS_PASSWORD=your-metrics-password